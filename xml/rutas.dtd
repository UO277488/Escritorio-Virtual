<!ELEMENT rutas (ruta*)>
<!ELEMENT ruta  (nombre, tipo, medio, fechaInicio?, fechaFin? ,tiempo, agencia, descripción, 
personas, lugarInicio, direccionInicio, coordenadasInicio, referencia*,
recomendación, hito*)>
<!ELEMENT nombre (#PCDATA)>
<!ELEMENT tipo (#PCDATA)>
<!ELEMENT medio (#PCDATA)>
<!ELEMENT fechaInicio (#PCDATA)>
<!ELEMENT fechaFin (#PCDATA)>
<!ELEMENT tiempo (#PCDATA)>
<!ELEMENT agencia (#PCDATA)>
<!ELEMENT descripción (#PCDATA)>
<!ELEMENT personas (#PCDATA)>
<!ELEMENT lugarInicio (#PCDATA)>
<!ELEMENT direccionInicio (#PCDATA)>
<!ELEMENT coordenadasInicio (#PCDATA)>
<!ELEMENT referencia (#PCDATA)>
<!ELEMENT recomendación (#PCDATA)>
<!ELEMENT hitos (hito*)>
<!ELEMENT hito (nombreHito, descriptionHito, distanciaHito, fotografíaHito+, vídeoHito*)>
<!ELEMENT nombreHito (#PCDATA)>
<!ELEMENT descriptionHito (#PCDATA)>
<!ELEMENT distanciaHito (#PCDATA)>
<!ELEMENT fotografíaHito (#PCDATA)>
<!ELEMENT vídeoHito (#PCDATA)>
<!ATTLIST hito 
    coordenadaLatitud CDATA #REQUIRED
    coordenadaLongitud CDATA #REQUIRED
    coordenadaAltitud CDATA #REQUIRED>